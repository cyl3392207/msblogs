{
  "parameters": [
    {
      "name": "enableNonSslPort",
      "default": "false",
      "type": "string"
    }
  ],
  "title": "Per Resource Type Location Policy",
  "description": "Only allow location for a specific type of resource",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "source": "action",
          "like": "Microsoft.Cache/Redis/*"
        },
        {
          "not": {
            "allof": [
              {
                "field": "Microsoft.Cache/Redis/enableNonSslPort",
                "equals": "[parameters('enableNonSslPort')]"
              }
            ]
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }

}
